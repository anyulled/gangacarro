{% extends "layout/base.html.twig"%}
{%block titulo 'Listado de Usuarios' %}
{%block contenido%}
<div class="well-small">
    <h3>Listado de Usuarios</h3>
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th>id
                    <div class="btn-group pull-right">
                        <a href="{{url_sortable("id","asc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-up icon-white"></i></a>
                        <a href="{{url_sortable("id","desc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-down icon-white"></i></a>
                    </div>
                </th>
                <th>login
                    <div class="btn-group pull-right">
                        <a href="{{url_sortable("login","asc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-up icon-white"></i></a>
                        <a href="{{url_sortable("login","desc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-down icon-white"></i></a>
                    </div>
                </th>
                <th>Nombre
                    <div class="btn-group pull-right">
                        <a href="{{url_sortable("nombre","asc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-up icon-white"></i></a>
                        <a href="{{url_sortable("nombre","desc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-down icon-white"></i></a>
                    </div>
                </th>
                <th>Apellido
                    <div class="btn-group pull-right">
                        <a href="{{url_sortable("apellido","asc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-up icon-white"></i></a>
                        <a href="{{url_sortable("apellido","desc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-down icon-white"></i></a>
                    </div>
                </th>
                <th>Rol
                    <div class="btn-group pull-right">
                        <a href="{{url_sortable("rol","asc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-up icon-white"></i></a>
                        <a href="{{url_sortable("rol","desc")|raw }}" class="btn btn-mini btn-info"><i class="icon-chevron-down icon-white"></i></a>
                    </div>
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in registros %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.login }}</td>
                <td>{{ usuario.nombre|title }}</td>
                <td>{{ usuario.apellido|title }}</td>
                <td>{{ usuario.rol|capitalize }}</td>
                <td>
                    <a href="ver/{{ usuario.id }}" class="btn">Ver</a>
                    <a href="editar/{{ usuario.id }}" class="btn btn-info">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4"><p>No se encontraron registros.</p></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div>
    {{ paginacion|raw }}
</div>
        <div class="well">
            <a href="{{constant('URL_SISTEMA')}}usuario/crear" class="btn btn-primary">Crear nuevo usuario</a>
        </div>
</div>
{% endblock %}
