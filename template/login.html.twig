{%endblock%}
{%block contenido %}
<div class="row">
    <div class="span6">
        <h2>Usuario Existente</h2>
        <form class="form form-horizontal" method="post">
            <fieldset>
                <legend>Inicie Sesi&oacute;n</legend>
                <div class="control-group">
                    <label class="control-label">Login</label>
                    <div class="controls">
                        <input placeholder="Nombre de Usuario" type="text" name="login" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Password</label>
                    <div class="controls">
                        <input placeholder="Contrase&ntilde;a" type="password" name="password"/>
                    </div>
                </div>
                <div class="form-actions">
                    <input class="btn btn-primary" type="submit" name="submit" value="iniciar sesion"/>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="span6">
        <h2>Usuario Nuevo</h2>
        <br/><br/>
        <div class="well well-large">
            <a href="{{constant('URL_SISTEMA')}}usuario/Registrar" class="btn btn-info">Registrar nuevo usuario</a>
        </div>
    </div>
</div>
{% endblock %}